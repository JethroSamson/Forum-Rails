<script>
    $(document).ready(function(){
        $("button#edit").click(function(){
            $("div#ed").removeAttr("hidden")
            $("div#ps").attr('hidden', 'hidden')
        })
        $("button#pass").click(function(){
            $("div#ps").removeAttr("hidden")
            $("div#ed").attr('hidden', 'hidden')
        })
        $("button.hide").click(function(){
            $("div#ps").attr('hidden', 'hidden')
            $("div#ed").attr('hidden', 'hidden')
        })
    })
    $("form#ed").submit(function(w){
        var form = $('form#ed')[0];
        var data = new FormData(form);
        w.preventDefault();
        $.ajax({
            type: "PUT",
            url: $('form#ed').attr('action'),
            enctype: 'multipart/form-data',
            processData: false,  // Important!
            contentType: false,
            cache: false,
            data: new FormData(form),
            success: function(response){
                if(response.message == "success"){
                    swal({
                        type: 'success',
                        title: 'Account Updated!!',
                        showConfirmButton: false,
                        },setTimeout(function() {
                            location.reload();
                        }, 1000)
                    )
                }
                else if(response.message == "failed"){
                    swal({
                        type: 'warning',
                        title: 'Failed!!',
                        text: 'Incorrect email or password'
                    })
                }
                
            }
        })
    })
    $("form#ps").submit(function(w){
        w.preventDefault();
        $.ajax({
            type: "PUT",
            url: $('form#ps').attr('action'),
            data: $('form#ps').serializeArray(),
            success: function(response){
                if(response.message == "success"){
                    swal({
                        type: 'success',
                        title: 'Password Updated!!',
                        showConfirmButton: false,
                        },setTimeout(function() {
                            location.reload();
                        }, 1000)
                    )
                }
                else if(response.message == "failed"){
                    swal({
                        type: 'warning',
                        title: 'Failed!!',
                        text: 'Incorrect email or password'
                    })
                }
                
            }
        })
    })
</script>