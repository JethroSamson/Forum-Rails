    <!-- Begin page content -->
    <main role="main" style="margin-top:85px; margin-left:20px">
        <form id="search" class="form-inline mt-2 mt-md-0 offset-lg-12" style="margin-bottom:5px;" action="/home" accept-charset="UTF-8" method="get">
            <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
            <input id="eng" class="form-control mr-sm-2" type="text" placeholder="Search Article" aria-label="Search" name="title">
        </form>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7 feed">
                <div id="results" hidden>
                </div>
                <% @posts.each do |post| %>
                    <div class="articles col-xs-12 col-sm-12 col-md-6 col-lg-12">
                        <div class="card" style="margin-bottom:15px">
                            <div class="card-header">
                                <% @accounts.each do |t| %>
                                    <% if(post.account_id === t.id) && t.image_url %>
                                        <%= image_tag t.image_url.to_s, :style => "width:50px; height:50px; border-radius: 50%" %>
                                        
                                        <% elsif(post.account_id === t.id) && !(t.image_url) %>
                                            <%= image_tag 'icon.jpg', :style => "width:50px; height:50px; border-radius: 50%" %>
                                    <% end %>
                                <% end %>
                                <a style="font-weight:550; text-decoration:none;" href="/home/<%=post.account_id%> "> <%= post.email %> </a>
                                <p class="card-text" style="position:absolute; margin-left:55px; margin-top:-20px; font-size:13px"><small class="text-muted"> <%= time_ago_in_words(post.created_at) %> ago,
                                <% if post.comments.size === 0 %>
                                    <%= '0 comment' %> </p>
                                    <% else %>
                                        <%= pluralize post.comments.size, 'comment' %>
                                <% end %>
                                </small> </p>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><%= post.title %></h5>
                                <% if post.content.scan(/[\w-]+/).size < 90 %>
                                    <p class="card-text"><%= post.content %></p>
                                    <% else %>
                                        <p id="cont<%=post.id%>" class="long" class="card-text">
                                            <%= post.content.truncate_words(90) %> 
                                            <a href='#see' class="see" id="cont<%=post.id%>"> see more </a> 
                                        </p>
                                        <div class="cont" id="cont<%=post.id%>" hidden> 
                                            <p id="hide<%=post.id%>">
                                                <%= post.content %> <a href='#hide' class="hide" id="hide<%=post.id%>"> see less </a>
                                            </p>
                                        </div>
                                <% end %>
                                <% if current_account.id === post.account_id %>
                                    <input class="form-control" value=<%= post.id %> id="dd" hidden />  
                                    <%= link_to 'Delete', home_posts_path(post), :id =>'delete', :class => "btn btn-danger btn-sm",:style => "float:right; margin-left:5px " %>
                                <% end %>
                                <%= link_to 'Comments', home_posts_path(post), :class => "btn btn-info btn-sm", :style => "float:right;" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="position-fixed col-xs-6 col-sm-6 col-md-12 col-lg-5 offset-xs offset-sm offset-md-6 offset-lg-7 float">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-12 float">
                    <% if current_account %>
                        <%= link_to "Create Post", "#post", :class => "btn btn-success col-md-12", "data-toggle" => "modal" %> 
                    <%end%>
                    <br>
                    <br>
                    <table class="table">
                        <thead class="thead-dark">
                            <div class="card-header text-white" style="background-color:#F06191; padding:10px">
                            <h5 style="text-align:center"> Trending Articles </h5>
                            </div>
                        </thead>
                        <tbody style="background-color:#F7F7F7">
